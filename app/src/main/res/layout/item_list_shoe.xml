<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.navigation.GameFragment">

    <data>

        <variable
            name="model"
            type="com.eminesa.udacityproject1.models.Shoe" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:elevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="16dp"
            style="@style/AppTheme.NoActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shoeNameTextView"
                style="@style/TextViewBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{model.name}" />

            <TextView
                android:id="@+id/shoeCompanyTextView"
                style="@style/TextViewBackground"
                android:layout_marginTop="10dp"
                android:layout_below="@id/shoeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="bir denemnde" />

            <TextView
                android:id="@+id/shoeSizeTextView"
                style="@style/TextViewBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:text="40" />

            <TextView
                android:id="@+id/shoeDescriptionTextView"
                style="@style/TextViewBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoeCompanyTextView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="4 dfbfıvbjvjfnvfkv nkbfbknasvkjfdlgmcgn  epıgcmgonr  pscegohnwropg pnyttocpqn pmtnretpcppnacooc0" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>